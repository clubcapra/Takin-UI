{
  "name": "capra_web_ui",
  "version": "2.0.3",
  "author": {
    "name": "Club Capra",
    "email": "admin@clubcapra.com",
    "url": "http://www.clubcapra.com"
  },
  "description": "User Interface for ROS based robots",
  "private": true,
  "scripts": {
    "start": "electron-snowpack dev",
    "build": "npm run build:snowpack && npm run build:electron",
    "build:snowpack": "electron-snowpack build",
    "build:electron": "electron-builder",
    "test": "jest",
    "lint": "eslint --ext js,ts,tsx src",
    "fix": "eslint --fix --ext js,ts,tsx src",
    "typecheck": "tsc --noEmit",
    "clean": "electron-snowpack clean",
    "postinstall": "patch-package"
  },
  "build": {
    "appId": "com.clubcapra.capra_web_ui",
    "linux": {
      "target": [
        "deb"
      ]
    },
    "artifactName": "capra_web_ui_setup.${ext}",
    "extends": "electron-snowpack/config/electron-builder.js"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.1",
    "@xstate/react": "^1.3.1",
    "chart.js": "^3.0.0-rc.6",
    "chartjs-adapter-date-fns": "^1.1.0-beta.1",
    "date-fns": "^2.19.0",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.21",
    "polished": "^4.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-redux": "^7.2.3",
    "react-router-dom": "^5.2.0",
    "react-toastify": "^7.0.3",
    "ros3d": "^1.0.1",
    "roslib": "^1.1.0",
    "shortid": "^2.2.16",
    "styled-components": "^5.2.1",
    "xstate": "^4.17.1"
  },
  "devDependencies": {
    "@snowpack/plugin-react-refresh": "^2.4.1",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/roslib": "^1.1.1",
    "@types/shortid": "0.0.29",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "github:MarshallOfSound/electron-devtools-installer#master",
    "electron-snowpack": "^0.9.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "jest": "^26.6.3",
    "patch-package": "^6.4.7",
    "prettier": "^2.2.1",
    "snowpack": "3.1.2",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3"
  }
}
