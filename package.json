{
  "name": "capra_web_ui",
  "version": "2.0.3",
  "author": {
    "name": "Club Capra",
    "email": "admin@clubcapra.com",
    "url": "http://www.clubcapra.com"
  },
  "description": "User Interface for ROS based robots",
  "private": true,
  "homepage": "./",
  "main": "build/main.js",
  "scripts": {
    "start": "concurrently -k -s first -n renderer,main npm:start:renderer npm:start:main",
    "start:renderer": "parcel src/renderer/index.html --out-dir build -p 8511",
    "start:main": "npm run build:main && wait-on http://localhost:8511 && electron .",
    "build": "npm run build:renderer && npm run build:main && npm run build:electron",
    "build:main": "parcel build src/main/main.ts --out-dir build --target electron",
    "build:renderer": "parcel build src/renderer/index.html --out-dir build --public-url ./",
    "build:electron": "electron-builder --publish never",
    "test": "jest",
    "lint": "eslint --ext js,ts,tsx src",
    "fix": "eslint --fix --ext js,ts,tsx src",
    "typecheck": "tsc --noEmit",
    "check": "concurrently npm:lint npm:typecheck",
    "electron": "electron ."
  },
  "build": {
    "appId": "com.clubcapra.capra_web_ui",
    "files": [
      "build/**/*"
    ],
    "linux": {
      "target": [
        "deb"
      ]
    },
    "directories": {
      "buildResources": ".src/shared/build/resources/"
    },
    "artifactName": "capra_web_ui_setup.${ext}",
    "extends": null
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.0",
    "@xstate/react": "^1.3.1",
    "chart.js": "^2.9.4",
    "chartjs-plugin-streaming": "^1.8.0",
    "date-fns": "^2.19.0",
    "lodash": "^4.17.21",
    "polished": "^4.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^4.2.0",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-toastify": "^7.0.3",
    "redux": "^4.0.5",
    "ros3d": "^1.0.1",
    "roslib": "^1.1.0",
    "shortid": "^2.2.16",
    "styled-components": "^5.2.1",
    "xstate": "^4.16.2"
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.31",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.1",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/roslib": "^1.1.1",
    "@types/shortid": "0.0.29",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^6.0.0",
    "electron": "^10.1.2",
    "electron-builder": "^22.10.5",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "jest": "^26.6.3",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3",
    "wait-on": "^5.2.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
