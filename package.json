{
  "name": "capra_web_ui",
  "version": "2.0.3",
  "author": {
    "name": "Club Capra",
    "email": "admin@clubcapra.com",
    "url": "http://www.clubcapra.com"
  },
  "description": "User Interface for ROS based robots",
  "private": true,
  "scripts": {
    "start": "electron-snowpack dev",
    "build": "npm run build:snowpack && npm run build:electron",
    "build:snowpack": "electron-snowpack build",
    "build:electron": "electron-builder --publish never",
    "test": "jest",
    "lint": "eslint --ext js,ts,tsx src",
    "fix": "eslint --fix --ext js,ts,tsx src",
    "typecheck": "tsc --noEmit",
    "clean": "electron-snowpack clean",
    "postinstall": "patch-package"
  },
  "build": {
    "appId": "com.clubcapra.capra_web_ui",
    "linux": {
      "target": [
        "deb"
      ]
    },
    "artifactName": "capra_web_ui_setup.${ext}",
    "extends": "electron-snowpack/config/electron-builder.js"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.1",
    "@xstate/react": "^1.3.3",
    "chart.js": "^3.3.0",
    "chartjs-adapter-date-fns": "^2.0.0",
    "date-fns": "^2.22.1",
    "dotenv": "^10.0.0",
    "lodash": "^4.17.21",
    "polished": "^4.1.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.2.0",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-toastify": "^7.0.4",
    "ros3d": "^1.0.1",
    "roslib": "^1.1.0",
    "shortid": "^2.2.16",
    "styled-components": "^5.3.0",
    "xstate": "^4.19.2"
  },
  "devDependencies": {
    "@snowpack/plugin-react-refresh": "^2.5.0",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/roslib": "^1.1.1",
    "@types/shortid": "0.0.29",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "electron": "^12.0.5",
    "electron-builder": "^22.10.5",
    "electron-devtools-installer": "^3.2.0",
    "electron-snowpack": "^0.11.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "jest": "^27.0.3",
    "patch-package": "^6.4.7",
    "prettier": "^2.3.0",
    "snowpack": "^3.5.2",
    "ts-jest": "^27.0.1",
    "typescript": "^4.3.2"
  }
}
