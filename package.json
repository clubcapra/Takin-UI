{
  "name": "capra_web_ui",
  "version": "2.0.3",
  "author": {
    "name": "Club Capra",
    "email": "admin@clubcapra.com",
    "url": "http://www.clubcapra.com"
  },
  "description": "User Interface for ROS based robots",
  "private": true,
  "homepage": "./",
  "main": "src/electron/main.js",
  "scripts": {
    "start": "concurrently -k -s first -n react,electron npm:start:react npm:start:electron",
    "start:react": "react-app-rewired start",
    "start:electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build:react",
    "build:react": "react-app-rewired build",
    "build:electron": "npm run build:react && electron-builder",
    "test": "react-app-rewired test",
    "eject": "react-app-rewired eject",
    "lint": "eslint --ext js,ts,tsx src",
    "typecheck": "tsc --noEmit"
  },
  "build": {
    "appId": "com.clubcapra.capra_web_ui",
    "files": [
      "build/**/*",
      "src/electron/**/*.js"
    ],
    "linux": {
      "target": [
        "deb"
      ]
    },
    "directories": {
      "buildResources": "./src/assets/build"
    },
    "extraResources": [
      "src/assets/images/*"
    ],
    "artifactName": "capra_web_ui_setup.${ext}",
    "extends": null
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.2.1",
    "@types/roslib": "1.0.0",
    "chart.js": "^2.9.3",
    "chartjs-plugin-streaming": "^1.8.0",
    "date-fns": "^2.9.0",
    "lodash": "^4.17.15",
    "polished": "^3.4.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-icons": "^3.8.0",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-toastify": "^5.5.0",
    "redux": "^4.0.5",
    "roslib": "^1.0.1",
    "shortid": "^2.2.15",
    "styled-components": "^5.0.0",
    "typescript": "3.7.4"
  },
  "devDependencies": {
    "@types/chart.js": "^2.9.9",
    "@types/jest": "24.9.0",
    "@types/lodash": "^4.14.149",
    "@types/node": "13.1.7",
    "@types/react": "16.9.17",
    "@types/react-dom": "16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/react-router-dom": "^5.1.3",
    "@types/shortid": "0.0.29",
    "@types/styled-components": "^4.4.2",
    "concurrently": "^5.0.2",
    "electron": "^7.1.9",
    "electron-builder": "^22.2.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^4.0.10",
    "prettier": "^1.19.1",
    "react-app-rewired": "^2.1.5",
    "react-scripts": "3.3.0",
    "wait-on": "^3.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
